{
  "name": "ForumTopic",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "content": {
      "type": "string"
    },
    "category": {
      "type": "string",
      "enum": [
        "gardening_tips",
        "trading_ideas",
        "general_discussion",
        "site_feedback"
      ]
    },
    "is_pinned": {
      "type": "boolean",
      "default": false
    },
    "is_locked": {
      "type": "boolean",
      "default": false
    },
    "view_count": {
      "type": "number",
      "default": 0
    }
  },
  "required": [
    "title",
    "content",
    "category"
  ]
}